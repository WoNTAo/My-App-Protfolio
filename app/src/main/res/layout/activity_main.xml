<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.wontao.myappprotfolio.MainActivity">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="My Nanodegree Apps!"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/popular_movies_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_title"
        android:layout_alignRight="@id/text_view_title"
        android:layout_below="@id/text_view_title"
        android:background="#2E3D49"
        android:text="popular movies"
        android:onClick="myClick"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/stock_hawk_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_title"
        android:layout_alignRight="@id/text_view_title"
        android:layout_below="@id/popular_movies_button"
        android:layout_marginTop="8dp"
        android:background="#2E3D49"
        android:text="stock hawk"
        android:onClick="myClick"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/build_it_bigger_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_title"
        android:layout_alignRight="@id/text_view_title"
        android:layout_below="@id/stock_hawk_button"
        android:layout_marginTop="8dp"
        android:background="#2E3D49"
        android:text="build it bigger"
        android:onClick="myClick"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/make_your_app_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_title"
        android:layout_alignRight="@id/text_view_title"
        android:layout_below="@id/build_it_bigger_button"
        android:layout_marginTop="8dp"
        android:background="#2E3D49"
        android:text="make your app marterial"
        android:onClick="myClick"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/go_ubiquitous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_title"
        android:layout_alignRight="@id/text_view_title"
        android:layout_below="@id/make_your_app_material"
        android:layout_marginTop="8dp"
        android:background="#2E3D49"
        android:text="go ubiquitous"
        android:onClick="myClick"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/capstone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_title"
        android:layout_alignRight="@id/text_view_title"
        android:layout_below="@id/go_ubiquitous"
        android:layout_marginTop="8dp"
        android:background="#2E3D49"
        android:text="capstone"
        android:onClick="myClick"
        android:textColor="@android:color/white" />

</RelativeLayout>
